---
import { ViewTransitions } from "astro:transitions";
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  dark?: boolean;
  customClasses?: string;
}

const { title, dark, customClasses } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class:list={[{ dark: dark }, customClasses]}>
    <Header dark={dark} customClasses="default-max-width" />
    <main>
      <slot />
    </main>
    <Footer dark={dark} customClasses="default-max-width" />
    <style is:global>
      * {
        margin: 0;
      }
      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }
      :root {
        --color-primary: #1d1d1d;
        --color-secondary: #fff;
        --base-max-width: 1200px;
      }
      html {
        font-family: "Poppins", sans-serif;
      }
      body {
        margin: 0 auto;
        font-size: 16px;
        font-weight: 400;
        line-height: 28px;
        scroll-behavior: smooth;
        background-color: #f3f1ec;
        color: var(--color-primary);
        fill: var(--color-primary);
      }
      body.dark {
        background-color: #18181a;
        color: var(--color-secondary);
        fill: var(--color-secondary);
      }
      body.darkv2 {
        background-color: #1b1b1b;
      }
      a {
        color: inherit;
        transition: opacity 0.2s;
      }
      a:hover {
        opacity: 0.8;
      }
      p,
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        overflow-wrap: break-word;
      }
      .image-section {
        margin: 60px 0;
      }
      .image-section.no-margin-bottom {
        margin-bottom: 0;
      }
      .image-section img {
        max-width: var(--base-max-width);
        width: 100%;
        height: 100%;
      }
      .default-max-width {
        margin: 0 auto;
        padding-left: 30px !important;
        padding-right: 30px !important;
        max-width: var(--base-max-width);
      }
      .banner {
        margin-bottom: 32px;
      }
      .banner .banner-image {
        border-radius: 16px;
      }
      .image-section img {
        border-radius: 20px;
        max-width: unset;
      }
    </style>
  </body>
</html>
