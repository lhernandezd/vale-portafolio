---
interface Props {
  link: string;
  text: string;
  external?: boolean;
}

const { link, text, external } = Astro.props;
---

{
  external ? (
    <a
      class="pill"
      href={link}
      type="button"
      target="_blank"
      rel="noopener noreferrer"
    >
      {text}
    </a>
  ) : (
    <a class="pill" href={link} type="button">
      {text}
    </a>
  )
}

<style>
  .pill {
    background-color: var(--color-secondary) 0;
    border-radius: 50px;
    min-height: 48px;
    padding: 12px 32px;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    transition:
      border-color 0.3s,
      background-color 0.3s;
    text-align: center;
    border: 1px solid var(--color-primary);
  }
  .pill:hover {
    border-color: #0000;
    background-color: var(--color-secondary);
  }
</style>
