---
interface Props {
  dark?: boolean;
  customClasses?: string;
}

const { dark, customClasses } = Astro.props;
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<header
  class:list={[
    "header",
    {
      dark: dark,
    },
    customClasses,
  ]}
>
  <a class="header-logo" href="/">Valentina M.</a>
  <nav class="header-navigation">
    <a class={currentPath === "" ? "active" : ""} href="/">Home</a>
    <a class={currentPath.includes("about") ? "active" : ""} href="/#about"
      >About</a
    >
    <a class={currentPath.includes("work") ? "active" : ""} href="/#work"
      >Work</a
    >
  </nav>
</header>

<style>
  .header {
    display: flex;
    justify-content: space-between;
    padding: 30px 0;
  }
  .header a {
    text-decoration: none;
  }
  .header-navigation a {
    padding: 9px 20px;
  }
  .header a.active {
    border: 1px solid var(--color-primary);
    border-radius: 20px;
  }
  .header a:hover {
    text-decoration: none;
  }
  .header.dark a.active {
    border-color: var(--color-secondary);
  }
  .header .header-logo {
    color: var(--color-primary);
    border-radius: 5px;
    background-color: #ef9efd;
    font-weight: 500;
    font-size: 12px;
    padding: 5px 18px;
    max-height: 25px;
    line-height: 16px;
  }
  @media (max-width: 590px) {
    .header {
      flex-direction: column;
      align-items: center;
      row-gap: 20px;
    }
    .header a {
      padding: 8px 12px;
      font-size: 12px;
    }
    .header .header-logo {
      font-size: 12px;
      padding: 5px 12px;
      max-height: 20px;
      line-height: 12px;
    }
  }
</style>
